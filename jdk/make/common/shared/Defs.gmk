      PREVIOUS_JRE_FILE  =$(ALT_PREVIOUS_JRE_FILE)
    else
      PREVIOUS_JRE_FILE = \
	  jre-$(PREVIOUS_JDK_UNDERSCORE_VERSION)-$(PLATFORM)-$(ARCH)$(BUNDLE_FILE_SUFFIX)
    endif
    export PREVIOUS_JRE_FILE
    PREVIOUS_JRE_FILE:=$(call AltCheckSpaces,PREVIOUS_JRE_FILE)
