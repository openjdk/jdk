include $(SPEC)
include MakeBase.gmk
include JavaCompilation.gmk
include Setup.gmk

default: images

include Tools.gmk

images: jre-image jdk-image

ifeq ($(OPENJDK_TARGET_OS),solaris)
define install-file
	$(MKDIR) -p $(@D)
	$(CP) -f -r -P '$<' '$(@D)'
endef
else ifeq ($(OPENJDK_TARGET_OS),macosx)
define install-file
	$(MKDIR) -p $(@D)
	$(CP) -fpRP '$<' '$@'
endef
else
define install-file
	$(MKDIR) -p $(@D)
	$(CP) -fP '$<' '$@'
endef
endif

